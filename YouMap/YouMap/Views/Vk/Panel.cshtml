@model YouMap.Models.VkPanelModel

<script>
    $(document).ready(function() {
        YouMap.Vk.Panel.Initialize('@Model.IsVkUser' == 'True');
    });
</script>

@if(Model.IsVkUser)
{
    
    <div id="vkPanel" class="slide-popup">
        <div class="actions"><a class="awesome small colorbox" href="@Url.Action("CheckIn","Map")">Отметиться</a><a class="awesome small" id="showSettings" href="#">&nu;</a></div>
        <div class="hidden container">
            <div>
                @Html.CheckBoxFor(x => x.ShareLocation)
                @Html.LabelFor(x => x.ShareLocation,"Показывать меня друзьям")
                
            </div>
            <div>
                @Html.CheckBoxFor(x => x.ShowFriends)
                @Html.LabelFor(x => x.ShowFriends, "Показывать друзей")         
            </div>
        </div>
    </div>
}