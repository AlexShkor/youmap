@model PlaceInfoModel

@{
    Layout = "~/Areas/Mobile/Views/Shared/_Layout.Mobile.cshtml";
    ViewBag.Title = Model.Title;
}

<fieldset>
    <div class="ui-block-a">
        <img src="@Model.Logo"/>
    </div>
    <div class="ui-block-b">
        <h2>@Model.Title</h2>
    </div>	 
</fieldset>

<ul data-role="listview" data-inset="true">
    <li><a href="@Model.CheckInLink">Отметиться</a></li>
    <li><a href="@Model.MapLink">Показать на карте</a></li>
</ul>

<ul data-role="listview" data-inset="true">
    <li><a href="@Model.EventsLink">Встречи</a></li>
    <li><a href="@Model.CheckInsLink">Отметки</a></li>
</ul>