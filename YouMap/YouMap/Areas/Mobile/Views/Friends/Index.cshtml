@model IEnumerable<YouMap.Areas.Mobile.Controllers.FriendModel>

@{
    Layout = "~/Areas/Mobile/Views/Shared/_Layout.Mobile.cshtml";
    ViewBag.Title = "Друзья";
}

<ul data-role="listview" data-inset="true" data-filter="true">
@foreach(var item in Model)
{

        <li data-corners="false" data-shadow="false" data-wrapperels="div"
        data-icon="arrow-r" data-iconpos="right" class="ui-btn ui-btn-icon-right ui-li-has-arrow ui-li ui-li-has-thumb ui-btn-up">
        <div>
            <div class="ui-btn-text">
                <a href="@item.DetailsLink" class="ui-link-inherit">
                    <p class="ui-li-aside ui-li-desc">@item.PlaceTitle<strong>@item.LastCheckInTimeAgo</strong></p>
                    <img src="http://vk.com/images/camera_c.gif" style="margin-left: -70px;" class="ui-li-thumb">
                    <h3 class="ui-li-heading">@item.Name</h3>
                    <p class="ui-li-desc">@item.LastCheckInMessage</p>
                </a>
            </div>
            <span class="ui-icon ui-icon-arrow-r ui-icon-shadow">&nbsp;</span>
        </div>
    </li>
}
</ul>