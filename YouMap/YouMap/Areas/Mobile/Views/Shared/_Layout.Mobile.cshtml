<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width" />
        @Html.Partial("Styles.Mobile")
        @Html.Partial("Scripts.Mobile")
        @Html.Partial("LocationUpdater")
    </head>
    <body>
        <div data-role="page" data-theme="b">
            <div data-role="header">
                @if (IsSectionDefined("Header")) {
                    @RenderSection("Header")
                } else {
                    <a data-icon="home" href="@Url.Action("Main","Home")">Главная</a>
                    <h1>@ViewBag.Title</h1>
                    @Html.Action("LoginState","Home")
                }
            </div>
            <div data-role="content">
                @RenderBody()
            </div>
            @if (IsSectionDefined("Footer"))
            {
                <div data-role="footer" >
                    @RenderSection("Footer")
                </div>
            }
        </div>
    </body>
</html>